@model XMLDocuments.App.Models.XML.CreateXMLDocumentModel
@{
    ViewData["Title"] = "Create";
}


<form method="post" class="bw-form" asp-action="Create" enctype="multipart/form-data">
    @*@Html.AntiForgeryToken()*@
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <label for="Title">Title</label>
    <input type="text" class="form-control" asp-for="Title" />
    <span asp-validation-for="Title" class="text-danger"></span>

    <label for="Description">Description</label>
    <textarea asp-for="Description" class="form-control"></textarea>

    <div class="form-check form-switch mt-2 mb-2">
        <label class="form-check-label" for="changeCreateFromFileSwitch">Upload file</label>
        <input asp-for="CreateFromFile" class="form-check-input" type="checkbox" id="changeCreateFromFileSwitch">
    </div>

    <label for="XMLDocument">XML document</label>
    <textarea asp-for="XMLDocument" id="XMLDocumentContent" class="form-control"></textarea>

    <label for="File">Choose XML file</label>
    <input asp-for="File" id="XMLFile" type="file" class="form-control" accept=".xml" disabled="disabled" />

    <button class="btn btn-primary mt-3">Save</button>

    <div class="mt-2">
        @Html.ActionLink("Back", "Index")
    </div>

    @if (ViewBag.Error is not null)
    {
        <div class="error mt-3">@ViewBag.Error</div>
    }
</form>
